<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <title>Document</title>
  </head>
  <body>
    <% include ./nav.ejs %>
    <div class="container">
      <div class="card_card">
        <div class="profile-picture">
          <img
            src="https://www.w3schools.com/w3images/underwater.jpg"
            alt="Profile Picture"
          />
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="description">Masih belajar CSS dan HTML.</p>
        <a href="/logout" class="button">Log out</a>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="file" name="file" />
          <input type="text" name="imageText" placeholder="image text" />
          <input type="submit" value="submit" />
        </form>
      </div>
      <div style="display: flex; gap: 10px; flex-wrap: wrap">
        <% user.posts.forEach(function(post) { %>
        <div
          class="card"
          style="width: 18rem; background-color: #ddd; padding: 15px"
        >
          <img
            src="/images/upload/<%= post.image %>"
            style="object-fit: cover; width: 100%; height: 200px"
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <p class="card-text"><%= post.imageText %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
